{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch.build",
            "group": "build",
            "problemMatcher": [],
            "label": "watch.build",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "clear": true
            }
        },
        {
            "label": "test.file",
            "command": "spruce",
            "args": [
                "test",
                "--inspect",
                "5200",
                "--pattern",
                "${fileBasenameNoExtension}",
                "--shouldWatch"
            ],
            "promptOnClose": false,
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "test.reporter",
            "command": "spruce",
            "args": [
                "test",
                "--inspect",
                "5200",
                "--shouldHoldAtStart",
                "--shouldWatch"
            ],
            "promptOnClose": false,
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
        }
    ]
